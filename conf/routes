# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                  controllers.Application.index

# Authentication
GET         /login                             controllers.Auth.login
GET         /logout                            controllers.Auth.logout
POST        /authenticate                      controllers.Auth.authenticate

# User
GET         /user/create                       controllers.Users.createUser
POST        /user/create                       controllers.Users.createUserPost
GET         /user/profile                      controllers.Users.showUser
POST        /user/profile                      controllers.Users.updateUser

# ContainerManagement
GET         /management/overview               controllers.ContainerManagement.overview

# ServerManagement
GET         /cloudservices/overview            controllers.ServerManagement.overviewDefault
GET         /cloudservices/overview/:id        controllers.ServerManagement.overview(id: Int)
GET         /cloudservices/:id                 controllers.ServerManagement.show(id: String)
GET         /cloudservices/add/account         controllers.ServerManagement.addCloudServiceAccount
POST        /cloudservices/add/account         controllers.ServerManagement.authenticateCloudServiceInfo
GET         /cloudservices/add/server          controllers.ServerManagement.addCloudService
POST        /cloudservices/add/server          controllers.ServerManagement.authenticateCloudService
GET         /cloudservice/stop/:id             controllers.ServerManagement.powerOff(id: String)
GET         /cloudservice/start/:id            controllers.ServerManagement.powerOn(id: String)
GET         /cloudservice/delete/:id           controllers.ServerManagement.delete(id: String)

# Map static resources from the /public folder to the /assets URL path
GET         /images/*file                      controllers.Assets.at(path="/public/images", file)
GET         /bower_components/*file            controllers.Assets.at(path="/public/bower_components", file)
GET         /assets/*file                      controllers.Assets.at(path="/public/dev/assets", file)
# Map web jar assets from sbt to the /webjars URL path (includes bootstrap & angularjs
GET         /webjars/*file                     controllers.WebJarAssets.at(file)
